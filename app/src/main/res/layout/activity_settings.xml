<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rob.pomodoro.Settings"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textMT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Time" />

    <EditText
        android:id="@+id/editTextMT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="25" />

    <TextView
        android:id="@+id/textSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short Break" />

    <EditText
        android:id="@+id/editTextSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="5" />

    <TextView
        android:id="@+id/textLB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long Break" />

    <EditText
        android:id="@+id/editTextLB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="15" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="SaveSettings"/>

</LinearLayout>
